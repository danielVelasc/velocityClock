<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleAlarmView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mint"
    android:fitsSystemWindows="true">

    <TextView
        android:text="6:00 AM"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmTime"
        android:textSize="40sp"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/alarmSwitch" />

    <TextView
        android:text="Name"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmLabel"
        android:textSize="16sp"
        android:padding="15dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/alarmTime"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/alarmSwitch" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButton"
        android:tint="#ffffff"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@android:color/transparent"
        app:rippleColor="@color/white"
        app:elevation="0dp" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:id="@+id/alarmSwitch"
        android:padding="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:textColor="@color/white"/>

    <TextView
        android:text="Everyday"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmFrequency"
        android:textSize="16sp"
        android:padding="15dp"
        android:layout_below="@+id/alarmLabel"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/alarmLabel" />

</RelativeLayout>
